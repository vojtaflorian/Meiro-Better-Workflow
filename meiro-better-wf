    console.log("Meiro Better WF: PÅ™idÃ¡vÃ¡m styly...");

    var style = document.createElement('style');
    style.type = 'text/css';
    style.innerHTML = `
        @media (max-width: 1250px) {
            .dyn_width_small div div section{
